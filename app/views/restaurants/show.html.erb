<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<%= link_to 'Back', restaurants_path %>

<br>
<br>
<br>

<h4>Reviews for <%= @restaurant.name %></h4>
  <% @reviews.each do |review| %>
    <p><%= review.content %></p>
  <% end %>

<br>

<h4>Add a review</h4>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>
